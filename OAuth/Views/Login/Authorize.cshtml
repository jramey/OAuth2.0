<div class="container">
    <form class="form-signin" method="post">
        <p class="bg-danger">@ViewBag.ErrorMessage</p>
        <h2 class="form-signin-heading">Please Log In</h2>
        <label for="inputLogin" class="sr-only">Login Name</label>
        <input type="text" id="inputLogin" name="loginName" class="form-control" placeholder="Login Names" autofocus="">
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" name="password" class="form-control" placeholder="**********">
        <button class="btn btn-lg btn-primary btn-block" type="submit" formaction="/Login/OAuth/Authenticate">Log in</button>
    </form>
</div>